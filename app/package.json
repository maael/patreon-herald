{
  "name": "patreon-herald",
  "version": "1.0.0",
  "description": "Windows program to play sounds for Patreons first message in Twitch chat.",
  "main": "index.js",
  "scripts": {
    "build-js": "esbuild src/index.jsx --bundle --target=chrome60,firefox60,safari11,edge18 --outfile=resources/js/index.js",
    "build-css": "postcss src/styles.css -o resources/styles.css",
    "watch-src": "esbuild src/index.jsx --bundle --target=chrome60,firefox60,safari11,edge18 --outfile=resources/js/index.js --watch",
    "neu-update": "neu update",
    "run": "neu run",
    "watch-css": "postcss src/styles.css -o resources/styles.css -w",
    "dev": "run-p run watch-src watch-css",
    "prebuild": "rimraf dist && node scripts/update-config",
    "postbuild": "rimraf dist/patreon-herald/patreon-herald-linux* dist/patreon-herald/patreon-herald-mac* dist/cmd && move-file dist/patreon-herald/patreon-herald-win_x64.exe dist/patreon-herald/patreon-herald.exe",
    "build": "npm run build-js && npm run build-css && neu build",
    "test": "jest"
  },
  "keywords": [],
  "author": "Matthew Elphick <matt.a.elphy@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@sentry/react": "^7.12.1",
    "@sentry/tracing": "^7.12.1",
    "classnames": "^2.3.1",
    "date-fns": "^2.29.2",
    "howler": "^2.2.3",
    "react": "^17.0.2",
    "react-hot-toast": "^2.3.0",
    "react-icons": "^4.3.1",
    "react-range": "^1.8.14",
    "react-router-dom": "^5.3.0",
    "react-select": "^5.4.0",
    "recharts": "^2.1.13",
    "socket.io-client": "^4.5.1",
    "tmi.js": "^1.8.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@neutralinojs/neu": "^9.3.1",
    "@types/jest": "^29.0.1",
    "@types/react": "^17.0.34",
    "@types/react-router-dom": "^5.3.2",
    "@types/tmi.js": "^1.8.0",
    "@types/uuid": "^8.3.1",
    "autoprefixer": "^10.4.0",
    "cpy-cli": "^3.1.1",
    "esbuild": "^0.13.12",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "make-dir-cli": "^3.0.0",
    "move-file-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.1",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.19",
    "ts-jest": "^29.0.0",
    "typescript": "^4.4.4"
  }
}
